<div class="row">
    <div class="col-lg-12">
    <h1 class="page-header">Novo</h1>
</div>

<div class="row">
    <div class="col-lg-12">
    <div class="panel panel-default">
    <div class="panel-heading">
    Novo Administrador
</div>  

<% if @admin.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert"
    aria-hidden="true">×</button>
    <ul>
      <% @admin.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>

    <div class="form-group">       
        <%= form.label :email %>
        <%= form.text_field :email, class:"form-control", placeholder:"Email do Administrador"   %> 
    </div>

    <div class="form-group">
        <%= form.label :senha %>
        <%= form.password_field :password, class:"form-control", placeholder:"Senha" %>        
    </div>

    <div class="form-group">
        <%= form.label :confirmacao_da_senha %> <br>
        <%= form.password_field :confirmacao_da_senha, class:"from-control", placeholder:"Confirmação da Senha"  %>      
    </div>
    <button type="submit" class="btn btn-default">Salvar</button>
<% end %>